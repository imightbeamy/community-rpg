<strong>{{ text }}</strong>
<input type="hidden" name="question_id" value="{{ question_id }}">
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th></th>
            <th>Yes</th>
            <th>No</th>
            <th></th>
        </tr>
    </thead>
    {{#tokens}}
        <tr>
            <td class="col-xs-5">{{ title }}</td>
            <td class="col-xs-2">{{ yes_effect }}</td>
            <td class="col-xs-2">{{ no_effect }}</td>
            <td class="col-xs-3">
                <button class="btn btn-sm btn-info">Edit</button>
                <button class="btn btn-sm btn-warning">Delete</button>
            </td>
        </tr>
    {{/tokens}}

    {{#has_unset_tokens}}
        <tr class="form-group">
            <td>
                <select class="form-control">
                    {{#unset_tokens}}
                        <option value="{{ token_id }}">{{ title }}</option>
                    {{/unset_tokens}}
                </select>
            </td>
            <td>
                <input type="text" class="form-control">
            </td>
            <td>
                <input type="text" class="form-control">
            </td>
            <td><button class="btn btn-sm btn-success">Add Token</button></td>
        </tr>
    {{/has_unset_tokens}}
</table>